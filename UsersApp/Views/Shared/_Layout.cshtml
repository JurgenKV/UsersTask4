<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] UserApp </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body> 
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color: #fc6363;">
            <div class="container" >
                <a class="navbar-brand p-2 text-light font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Users</a>
                
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light btn" asp-area="" asp-controller="Home" asp-action="Register" > Registration </a>
                    </li>
                    

                </ul>
                
                <div class="justify-content-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form class="form-inline my-2 my-lg-0" method="post" asp-controller="Home" asp-action="Logout">
                            <b class="text-light">   @User.Identity.Name&emsp;</b>
                            <input type="submit" value="Logout" style="color: #dc3545" />
                        </form>
                    }
                    else
                    {
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        <b class="text-light"></b>
                    }
                </div>
            </div>
            </div>
        </nav>
    </header>
  
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - Yuri K
            </div>
        </footer>
       
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
